<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/lost_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/question" />

    <TextView
        android:id="@+id/lost_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_toEndOf="@+id/lost_item_icon"
        android:text="@string/lost_item_name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lost_item_time"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lost_item_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_toEndOf="@+id/lost_item_icon"
        android:text="Lost Item Time"
        android:textSize="24sp" />

</RelativeLayout>